{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "prefer-const": "warn",
    "no-var": "warn",
    "semi": ["warn", "always"],
    "quotes": ["warn", "double"],
    "comma-dangle": ["warn", "never"],
    "no-unused-vars": "warn"
  },
  "ignorePatterns": [
    "node_modules/",
    "coverage/",
    "__tests__/",
    "src/controllers/",
    "src/models/",
    "src/routes/",
    "src/middleware/"
  ]
}